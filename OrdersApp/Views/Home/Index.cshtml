@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Order>
<div>
    <a asp-area="" asp-controller="Customers" asp-action="AllCustomers">Управление заказчиками</a>
    <span>|</span>
    <a asp-area="" asp-controller="Orders" asp-action="AllOrders">Управление заказами</a>
</div>

<h3>Все заказы:</h3>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id заказа</th>
                    <th scope="col">Название</th>
                    <th scope="col">Дата</th>
                    <th scope="col">Стоимость</th>
                    <th scope="col">ФИО</th>
                    <th scope="col">Контакты</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="col">@item.OrderId</th>
                            <th scope="col">@item.OrderName</th>
                            <th scope="col">@item.OrderDate.ToShortDateString()</th>
                            <th scope="col">@item.Cost</th>
                            <th scope="col">@item.Customer!.Surename @item.Customer.Name</th>
                            <th scope="col">@item.Customer.PhoneNumber @item.Customer.Email</th>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>